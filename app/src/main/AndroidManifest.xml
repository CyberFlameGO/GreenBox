<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.longbow122.GreenBox">

    <application
            android:allowBackup="true"
            android:icon="@drawable/weekly_report"
            android:label="@string/app_name"
            android:roundIcon="@drawable/weekly_report"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity
                android:name=".LeaderboardActivity"
                android:exported="true"/>
        <activity
                android:name=".WeeklyReportActivity"
                android:exported="true"/>
        <activity
                android:name=".MainGUIActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:exported="true"
                android:label="@string/title_activity_main_guiactivity"
                android:theme="@android:style/Theme.Black.NoTitleBar"/>
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>